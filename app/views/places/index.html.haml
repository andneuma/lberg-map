.container
  %table.table.table-condensed.table-hover
    %thead
      %th.col-md-1
      %th= Place.human_attribute_name('name')
      %th= Place.human_attribute_name('address')
      %th= Place.human_attribute_name('categories')
      %th.col-md-1= Place.human_attribute_name('longitude')
      %th.col-md-1= Place.human_attribute_name('latitude')
      %th.col-md-1= Place.human_attribute_name('reviewed')
    %tbody
    - @places.each do |place|
      %tr
        %td
          = link_to edit_place_path(place) do
            %span{class: 'glyphicon glyphicon-pencil'}
          - if signed_in?
            = link_to review_path(place) do
              %span{class: 'glyphicon glyphicon-repeat'}
          = link_to place_path(place), {method: "delete", data: { confirm: "Bist du dir sicher, dass du den Eintrag l√∂schen willst?" }} do
            %span{class: 'glyphicon glyphicon-trash'}
        %td
          = place.name
        %td
          = place.address
        %td
          = generate_categories_filter_links place
        %td
          = place.latitude
        %td
          = place.longitude
        %td
          = place.reviewed
