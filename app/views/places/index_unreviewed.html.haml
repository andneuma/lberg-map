.container
  %h4
    Index of points with unconfirmed changes
  %table.table.table-condensed.table-hover
    %thead
      %th.col-md-1
      %th= Place.human_attribute_name('name')
      %th= Place.human_attribute_name('unreviewed_place_changes')
      %th= Place.human_attribute_name('unreviewed_translations')
      %th= Place.human_attribute_name('updated_at')
    %tbody
    - @places.each do |place|
      %tr{class: "#{place.edit_status}-point"}
        %td
          = link_to edit_place_path(place) do
            %span{class: 'glyphicon glyphicon-pencil'}
          - if signed_in?
            = link_to review_path(place) do
              %span{class: 'glyphicon glyphicon-repeat'}

          = link_to place_path(place), {method: "delete", data: { confirm: "Bist du dir sicher, dass du den Eintrag l√∂schen willst?" }} do
            %span{class: 'glyphicon glyphicon-trash'}
        %td
          = place.name
        %td
          = place.unreviewed_place_changes?
        %td
          = place.unreviewed_translations.map { |t| t.locale.to_s }.join(', ')
        %td
          = place.updated_at.to_s(:long)
  = will_paginate
