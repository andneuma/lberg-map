= form_for @place do |f|
  .col-xs-12
    = f.fields_for :descriptions do |d|
      .col-xs-2
        = d.text_field :language
      .col-xs-2
        = d.text_field :text
  .col-xs-12
    .col-xs-2
      = f.label :name
    .col-xs-2
      = f.label :latitude
    .col-xs-2
      = f.label :longitude
    .col-xs-2
      = f.label :categories
  .col-xs-12
    .col-xs-2
      = f.text_field :name
    .col-xs-2
      = f.text_field :latitude
    .col-xs-2
      = f.text_field :longitude
    .col-xs-2
      = f.text_field :categories
    .col-xs-2
      = f.submit 'Create', class: 'btn btn-sm btn-default'
