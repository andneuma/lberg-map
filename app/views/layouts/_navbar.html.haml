-# Navigation bar partial
%nav.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{'aria-controls' => 'navbar', 'aria-expanded' => 'false', 'data-target' => '#navbar', 'data-toggle' => 'collapse', :type => 'button'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a{href: root_path}
        .navbar-header.logo.logo-left
          LBERG
        .navbar-header.logo.logo-right
          MAP
    #navbar.collapse.navbar-collapse
      %ul.nav.navbar-nav.nav-pills.pull-left
        - if is_admin?
          %li{class: "#{'active' if current_page?(places_path)}"}
            = link_to('', places_path, class: 'glyphicon glyphicon-pencil')
        %li{class: "#{'active' if current_page?(about_path)}"}
          = link_to('', about_path, class: 'glyphicon glyphicon-info-sign')
        - if session[:user_id]
          %li{class: "#{'active' if current_page?(edit_user_path(session[:user_id]))}"}
            = link_to('', edit_user_path(session[:user_id]), class: 'glyphicon glyphicon-user')
          %li
            = link_to('', logout_path, class: 'glyphicon glyphicon-log-out')
      %ul.nav.navbar-nav.nav-pills.pull-right
        - I18n.available_locales.each do |l|
          %li{class: "#{'active' if l == locale}"}
            = link_to l.to_s, locale: l.to_s
