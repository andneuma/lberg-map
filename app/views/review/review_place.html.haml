.container
  .row.margin-below
    .col-md-6
      %h3 Reviewed
      %br
      .row
        - if @reviewed_place
          .col-xs-12
            = @reviewed_place.name
          .col-xs-12
            = address(@reviewed_place)
        - else
          .col-xs-12
            no reviewed place

    .col-md-6
      %h3 Unreviewed
      %br
      .row
        - if @unreviewed_place
          .col-xs-12
            = @unreviewed_place.name
          .col-xs-12
            = address(@unreviewed_place)
        - else
          .col-xs-12
            no unreviewed place

  .row
    .col-md-6
    .col-md-6
      = link_to 'Confirm', confirm_place_path, class: 'btn btn-primary btn-success'
      = link_to 'Refuse', refuse_place_path, class: 'btn btn-primary btn-danger'
